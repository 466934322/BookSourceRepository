{
  "name": "亲小说",
  "version": 100,
  "category": 2,
  "url": "https://www.qinxiaoshuo.com",
  "charset": "utf-8",
  "metadata": {
    "name": ["dd > h3 > a", "div.d_title > h1"],
    "author": ["dd.book_other > span", "div.d_title > span > a"],
    "cover": ["dt > a > mip-img@attr->src", "#bookimg > mip-img@attr->src"],
    "summary": ["dd.book_des", "#bookintro"],
    "category": ["#tags > a"],
    "status": ["#bookright > ui > li > span"],
    "update": ["#uptime > span"],
    "link": ["dt > a@attr->href@js->'https://www.qinxiaoshuo.com' + ${this}", "div.d_title > h1@js->'https://www.qinxiaoshuo.com/book/' + ${this}"],
    "catalog": [],
    "extra": [
      {
        "key": "bookId",
        "value": "meta[property=og:image]@attr->content@js->${this}.match(/\\d+/g)[0]"
      }
    ]
  },
  "catalog": {
    "list": "mip-accordion > section",
    "orderBy": 0,
    "booklet": {
      "name": "div > h3",
      "list": "div > div"
    },
    "chapter": {
      "name": "a",
      "link": "a@attr->href@js->'https://static.qinxiaoshuo.com/book/bookdata/' + ${extra.bookId} + '/' + ${this}.substring(${this}.lastIndexOf('/') + 1) + '.txt'"
    }
  },
  "content": {
    "text": ""
  },
  "search": {
    "link": "https://www.qinxiaoshuo.com/book/search/?keyword=${key}",
    "list": "#sitebox > dl"
  },
  "rank": {
